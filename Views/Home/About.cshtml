@{
    ViewData["Title"] = "About Us - Lalitha Rice";
}

<!-- Hero Section -->
<section class="hero-section text-center" style="height: 60vh;">
    <div class="container">
        <h1 class="display-4 mb-4">About Lalitha Rice</h1>
        <p class="lead">A Legacy of Quality Since 1990</p>
    </div>
</section>

<!-- Company History -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h2 class="section-title">Our Heritage</h2>
                <p class="lead">Three decades of excellence in rice production</p>
                <p>Founded in 1990, Lalitha Rice has been at the forefront of delivering premium quality rice to Indian households. Our commitment to quality and traditional values has made us one of the most trusted names in the rice industry.</p>
                <ul class="list-unstyled mt-4">
                    <li class="mb-3"><i class="fas fa-check text-warning me-2"></i> Premium quality rice varieties</li>
                    <li class="mb-3"><i class="fas fa-check text-warning me-2"></i> State-of-the-art processing facilities</li>
                    <li class="mb-3"><i class="fas fa-check text-warning me-2"></i> Rigorous quality control measures</li>
                </ul>
            </div>
            <div class="col-md-6">
                <img src="/images/heritage.jpg" alt="Our Heritage" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-bullseye fa-3x text-warning mb-4"></i>
                        <h3>Our Mission</h3>
                        <p>To provide the highest quality rice products while maintaining traditional values and embracing modern technology for sustainable agriculture.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-eye fa-3x text-warning mb-4"></i>
                        <h3>Our Vision</h3>
                        <p>To become the most trusted name in rice products globally while contributing to the well-being of farmers and communities.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quality Process -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center section-title mb-5">Our Quality Process</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="feature-box text-center">
                    <i class="fas fa-seedling fa-3x text-warning mb-3"></i>
                    <h4>Selection</h4>
                    <p>Careful selection of premium rice grains</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box text-center">
                    <i class="fas fa-microscope fa-3x text-warning mb-3"></i>
                    <h4>Testing</h4>
                    <p>Rigorous quality testing process</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box text-center">
                    <i class="fas fa-industry fa-3x text-warning mb-3"></i>
                    <h4>Processing</h4>
                    <p>Modern processing techniques</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box text-center">
                    <i class="fas fa-box-open fa-3x text-warning mb-3"></i>
                    <h4>Packaging</h4>
                    <p>Hygienic packaging for freshness</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center section-title mb-5">Our Leadership Team</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card team-card border-0 shadow-sm">
                    <img src="/images/team1.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Rajesh Kumar</h5>
                        <p class="card-text text-muted">Chief Executive Officer</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card team-card border-0 shadow-sm">
                    <img src="/images/team2.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Priya Sharma</h5>
                        <p class="card-text text-muted">Operations Director</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card team-card border-0 shadow-sm">
                    <img src="/images/team3.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Suresh Patel</h5>
                        <p class="card-text text-muted">Quality Control Head</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-warning text-dark">
    <div class="container text-center">
        <h2 class="mb-4">Join the Lalitha Rice Family</h2>
        <p class="lead mb-4">Experience the finest quality rice for your family</p>
        <a href="/Home/Contact" class="btn btn-dark btn-lg">Contact Us Today</a>
    </div>
</section>
